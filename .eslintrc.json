{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "plugins": [
    "redux-saga",
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "quotes": ["err", "single"],
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "semi": ["error", "always"],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "arrow-parens": [
      "error",
      "always"
    ],
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "no-console": 1,
    "handle-callback-err": 0,
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}